@page
@model PCRemoteControl.Pages.IndexModel
@section Scripts {
    @* Before *@
    <script src="~/js/control_hub.js" asp-append-version="true"></script>
    <script src="~/js/controls.js" asp-append-version="true"></script>
    @* Main *@
    <script src="~/js/app.js" asp-append-version="true"></script>
    @* After *@
    <script src="~/js/events.js" asp-append-version="true"></script>
}

<div class="container-fluid">
    <div class="flex-container">
        <header id="header">
            <div class="row pt-4 pb-4">
                <div class="col text-center">
                    <button id="leftArrowButton" onclick="controls.keyboardLeftArrowClick()" type="button" class="btn btn-primary btn-lg"><i class="fas fa-backward"></i></button>
                    <button id="rightArrowButton" onclick="controls.keyboardRightArrowClick()" type="button" class="btn btn-primary btn-lg"><i class="fas fa-forward"></i></button>
                    <button id="playPauseButton" onclick="controls.keyboardPlayPauseClick()" type="button" class="btn btn-primary btn-lg"><i class="fas fa-play"></i><i class="fas fa-pause"></i></button>
                    <button id="volumeMuteButton" onclick="controls.keyboardVolumeMuteClick()" type="button" class="btn btn-primary btn-lg"><i class="fas fa-volume-mute"></i></button>
                    <button id="volumeDownButton" onclick="controls.keyboardVolumeDownClick()" type="button" class="btn btn-primary btn-lg"><i class="fas fa-volume-down"></i></button>
                    <button id="volumeUpButton" onclick="controls.keyboardVolumeUpClick()" type="button" class="btn btn-primary btn-lg"><i class="fas fa-volume-up"></i></button>
                </div>
            </div>
            <div class="row pb-4">
                <div class="col">
                    <div class="input-group input-group-lg">
                        <button onclick="controls.keyboardEscapeClick()" type="button" class="btn btn-primary btn-lg">esc</button>
                        <input id="textInput" onblur="clearTextInput()" type="text" autocapitalize="none" class="form-control" placeholder="Keyboard">
                    </div>
                </div>
            </div>
        </header>

        <section id="content">
            <div id="touchpad"></div>
            <div id="scrollpad"></div>
        </section>

        <footer id="footer">
            <div class="row pt-4 pb-5">
                <div class="col">
                    <div class="d-grid">
                        <button onclick="controls.mouseLeftClick()" type="button" class="btn btn-primary btn-lg">Left</button>
                    </div>
                </div>
                <div class="col">
                    <div class="d-grid">
                        <button onclick="controls.mouseRightClick()" type="button" class="btn btn-primary btn-lg">Right</button>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>